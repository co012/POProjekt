<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefWidth="200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="simulator.FollowAnimalController">
   <children>
      <BarChart fx:id="followAnimalGenotypeBarChart" barGap="2.0" prefHeight="200.0" title="Genotype">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis autoRanging="false" minorTickCount="4" minorTickLength="3.0" side="LEFT" tickUnit="4.0" upperBound="32.0" />
        </yAxis>
      </BarChart>
      <VBox fx:id="controlsVBox" alignment="TOP_CENTER">
         <children>
            <HBox alignment="CENTER" prefWidth="200.0">
               <children>
                  <Button fx:id="previousButton" mnemonicParsing="false" text="&lt;" />
                  <Label fx:id="displayedAnimalFromFieldLabel" text="0/0">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="nextButton" mnemonicParsing="false" text="&gt;" />
               </children>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </HBox>
            <Button fx:id="followButton" mnemonicParsing="false" text="Follow" />
         </children>
      </VBox>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="157.0" minWidth="10.0" prefWidth="138.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="95.0" minWidth="10.0" prefWidth="62.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Number of children:" />
            <Label text="Number of descendants:" GridPane.rowIndex="1" />
            <Label text="Day of death:" GridPane.rowIndex="2" />
            <Label fx:id="numberOfChildrenLabel" text="0" GridPane.columnIndex="1" />
            <Label fx:id="numberOfDescendantsLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="dayOfDeathLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="5.0" />
         </padding>
      </GridPane>
      <Button fx:id="pauseButton" mnemonicParsing="false" text="Pause">
         <VBox.margin>
            <Insets bottom="10.0" top="20.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
